<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="relationship.persistence.ChatMessagePersistence" table="chatmessage">
	
		<id name="chatMessage_oid" type="int" column="chatMessage_oid">
			<generator class="native" />
		</id>
		<property name="chatMessage" column="chatMessage" type="string" />
		<property name="chatBy" column="chatBy" type="string" />
		<property name="chatDate" column="chatDate" type="date" />
		<property name="timeIn" column="timeIn" type="time" />
		<property name="publicId" column="publicId" type="int"/>
	</class>
	
</hibernate-mapping>